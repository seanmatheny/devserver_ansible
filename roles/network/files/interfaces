auto lo
iface lo inet loopback

auto bond0
iface bond0 inet manual
    bond-mode 4
    bond-miimon 100
    bond-lacp-rate 1
    bond-downdelay 0
    bond-updelay 0
    bond-slaves none
    bond_xmit_hash_policy 1

auto br1
iface br1 inet static
    address 10.0.0.100
    netmask 255.255.225.0
    broadcast 10.0.0.255
    gateway 10.0.0.1
    dns-nameservers 10.0.0.1 8.8.8.8
    bridge_ports bond0
    bridge_stp off
    bridge_fd 9

auto enp3s0
iface enp3s0 inet manual
    bond-master bond0

auto enp4s0
iface enp4s0 inet manual
    bond-master bond0
